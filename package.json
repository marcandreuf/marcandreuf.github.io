{
  "name": "marcandreuf.github.io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "serve ./dist",
    "preview": "astro preview",
    "build": "astro build",
    "build:nginx": "SITE_URL='https://marcandreuf.com' PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.marcandreuf.com/js/script.js' PLAUSIBLE_DOMAIN='marcandreuf.com' astro build",
    "build:nginx:local": "SITE_URL='https://blog.local.marcandreuf.com' PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.marcandreuf.com/js/script.js' PLAUSIBLE_DOMAIN='marcandreuf.com' astro build",
    "astro": "astro",
    "sync": "astro sync",
    "lint": "eslint --ext .astro,.tsx,.ts,.js,.mdx src",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules yarn.lock",
    "check-types": "tsc --noEmit --pretty",
    "deploy:nginx": "bash scripts/deploy-nginx.sh '~/traefik-proxy/apps/nmc-nginx-with-volume/website' arm1",
    "deploy:nginx:local": "bash scripts/deploy-nginx.sh '~/traefik-proxy/apps/nmc-nginx-with-volume/website' lxc11",
    "deploy:docker": "bash scripts/deploy-docker.sh arm1 '~/traefik-proxy/apps/nmc-docker' nemanjamitic/nemanjam.github.io",
    "deploy:docker:local": "bash scripts/deploy-docker.sh lxc11 '~/traefik-proxy/apps/nmc-docker' nemanjamitic/nemanjam.github.io",
    "docker:build:push:arm": "docker buildx build -f ./docker/Dockerfile -t nemanjamitic/nemanjam.github.io --build-arg ARG_SITE_URL_ARM64='https://nmc-docker.arm1.marcandreuf.com' --build-arg ARG_PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.marcandreuf.com/js/script.js' --build-arg ARG_PLAUSIBLE_DOMAIN='marcandreuf.com' --platform linux/arm64 --progress=plain --push .",
    "docker:build:push:x86": "docker buildx build -f ./docker/Dockerfile -t nemanjamitic/nemanjam.github.io --build-arg ARG_SITE_URL_AMD64='https://nmc-docker.local.marcandreuf.com' --build-arg ARG_PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.marcandreuf.com/js/script.js' --build-arg ARG_PLAUSIBLE_DOMAIN='marcandreuf.com' --platform linux/amd64 --push --progress=plain .",
    "docker:push": "docker push nemanjamitic/nemanjam.github.io",
    "dc:up": "docker compose up --build --force-recreate -d"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.10",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource-variable/inter": "^5.2.8",
    "astro": "^5.17.2",
    "astro-embed": "^0.7.4",
    "astro-expressive-code": "^0.37.1",
    "astro-icon": "^1.1.5",
    "astro-remote": "^0.3.4",
    "astro-social-share": "^2.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "feed": "^4.2.2",
    "giscus": "^1.6.0",
    "github-slugger": "^2.0.0",
    "mdast-util-to-string": "^4.0.0",
    "nanostores": "^0.11.4",
    "object-treeify": "^4.0.1",
    "playwright": "^1.58.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reading-time": "^1.5.0",
    "rehype-mermaid": "^3.0.0",
    "sharp": "0.34.0",
    "tailwind-clip-path": "^1.0.0",
    "tailwind-merge": "^2.6.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@expressive-code/plugin-collapsible-sections": "^0.37.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@iconify-json/mdi": "^1.2.3",
    "@tailwindcss/typography": "^0.5.19",
    "@types/mdast": "^4.0.4",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-mdx": "^3.6.2",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "satori": "^0.12.2",
    "satori-html": "^0.3.2",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=v22.9.0"
  }
}
